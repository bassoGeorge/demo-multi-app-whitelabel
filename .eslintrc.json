{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": ["type:ui", "type:util"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui", "type:util"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util"]
              },
              {
                "sourceTag": "scope:feature",
                "onlyDependOnLibsWithTags": [
                  "scope:global",
                  "scope:design-system"
                ]
              },
              {
                "sourceTag": "scope:global",
                "onlyDependOnLibsWithTags": [
                  "scope:global",
                  "scope:design-system"
                ]
              },
              {
                "sourceTag": "product:portal",
                "notDependOnLibsWithTags": ["/^product:(?!portal$).+$"] // dissallows portal products from using other product libraries
              },
              {
                "sourceTag": "client:sandbox",
                "notDependOnLibsWithTags": ["/^client:(?!sandbox$).+$"] // dissallows sandbox to use other client's libs
              },
              {
                "sourceTag": "client:client-a",
                "notDependOnLibsWithTags": ["/^client:(?!client-a$).+$"] // dissallows client-a to use other client's libs
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    }
  ]
}
