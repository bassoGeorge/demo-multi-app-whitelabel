{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@multi-app-whitelabel/design-system": [
        "libs/design-system/src/index.ts"
      ],
      "@multi-app-whitelabel/design-system-utils": [
        "libs/design-system-utils/src/index.ts"
      ],
      "@multi-app-whitelabel/nx-plugin": ["tools/nx-plugin/src/index.ts"],
      "@multi-app-whitelabel/p-client-a-custom-feature": [
        "libs/p-client-a-custom-feature/src/index.ts"
      ],
      "@multi-app-whitelabel/p-dashboard": ["libs/p-dashboard/src/index.ts"],
      "@multi-app-whitelabel/shared": ["libs/shared/src/index.ts"],
      "@multi-app-whitelabel/theme-client-a": [
        "libs/theme-client-a/src/index.ts"
      ],
      "@multi-app-whitelabel/theme-sandbox": [
        "libs/theme-sandbox/src/index.ts"
      ],
      "@multi-app-whitelabel/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
